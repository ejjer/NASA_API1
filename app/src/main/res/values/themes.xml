<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    >

    <style name="Theme.NASA_API" parent="Theme.Material3.DynamicColors.DayNight">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="MyTextAppearanceBody2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/alike_angular</item>
        <item name="android:fontFamily">@font/alike_angular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">13sp</item>
        <item name="android:letterSpacing">0.1</item>

    </style>

    <style name="BlueTheme" parent="Theme.NASA_API">

        <item name="textAppearanceBody2">@style/MyTextAppearanceBody2</item>
        <item name="mainColor">#3B11F7</item>

        <item name="colorPrimary">#2F0EC4</item>
        <item name="colorOnPrimary">#2F0EC4</item>
        <item name="colorPrimaryContainer">#2F0EC4</item>
        <item name="colorOnPrimaryContainer">#795CF9</item>
        <item name="colorSecondary">#795CF9</item>
        <item name="colorOnSecondary">#795CF9</item>

        <item name="colorError">#2F0EC4</item>
        <item name="colorOnError">#2F0EC4</item>
        <item name="colorErrorContainer">#2F0EC4</item>
        <item name="colorOnErrorContainer">#2F0EC4</item>
        <item name="colorOutline">#2F0EC4</item>


        <item name="colorSurface">#603B11F7</item><!--цвет чипов  -->
        <item name="colorOnSurface">#4D795CF9</item><!--цвет текста   -->


        <item name="shapeAppearanceSmallComponent">@style/MyShapeAppearanceSmallComponent</item>
        <item name="bottomAppBarStyle">@style/BlueThemeAppBarStyle</item>
        <item name="tabStyle">@style/BlueTabStyle</item>


    </style>


    <style name="GreenTheme" parent="Theme.NASA_API">

        <item name="textAppearanceBody2">@style/MyTextAppearanceBody2</item>


        <item name="mainColor">#5E9F07</item>
        <item name="backgroundColor">#FFCDEDA4</item>


        <item name="colorPrimary">#5E9F07</item>
        <item name="colorOnPrimary">#5E9F07</item>
        <item name="colorPrimaryContainer">#3F6B04</item>
        <item name="colorOnPrimaryContainer">#3F6B04</item>
        <item name="colorSecondary">#CDEDA4</item>
        <item name="colorOnSecondary">#CDEDA4</item>
        <item name="colorError">#7CAE3B</item>
        <item name="colorOnError">#7CAE3B</item>
        <item name="colorErrorContainer">#7CAE3B</item>
        <item name="colorOnErrorContainer">#7CAE3B</item>
        <item name="colorOutline">#7CAE3B</item>


        <item name="colorSurface">#3F6B04</item><!--цвет чипов  -->
        <item name="colorOnSurface">#3F6B04</item><!--цвет текста   -->


        <item name="shapeAppearanceSmallComponent">@style/MyShapeAppearanceSmallComponent</item>
        <item name="bottomAppBarStyle">@style/GreenThemeAppBarStyle</item>

    </style>

    <style name="MyShapeAppearanceSmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="MyChipStyle" parent="Widget.Material3.Chip.Suggestion">
        <item name="android:textAppearance">@style/MyTextAppearanceBody2</item>
        <item name="shapeAppearanceOverlay">@style/MyShapeAppearanceSmallComponent</item>


        <item name="chipBackgroundColor">@drawable/my_selector_background_chip</item>
        <item name="rippleColor">#533FAB</item>

    </style>

    <style name="BlueThemeAppBarStyle" parent="Widget.Material3.BottomAppBar">
        <item name="backgroundTint">@color/blueAppBarColor</item>
        <item name="navigationIconTint">@color/white</item>
    </style>

    <style name="GreenThemeAppBarStyle" parent="Widget.Material3.BottomAppBar">
        <item name="backgroundTint">@color/greenAppBarColor</item>
        <item name="navigationIconTint">@color/white</item>
    </style>


    <style name="MyTextInputLayoutStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">

        <item name="helperTextTextColor">@color/helperTextColor</item>
        <item name="counterOverflowTextColor">@color/helperTextColor</item>
    </style>

    <style name="BlueTabStyle" parent="Widget.Material3.TabLayout">
        <item name="tabIndicatorFullWidth">true</item>
        <item name="tabIndicatorColor">@color/BlueTabIndicatorColor</item>
    </style>

    <style name="GreenTabStyle" parent="Widget.Material3.TabLayout">
        <item name="tabIndicatorFullWidth">true</item>
        <item name="tabIndicatorColor">@color/GreenTabIndicatorColor</item>
        <item name="tabTextColor">@color/GreenTabIndicatorColor</item>
    </style>


    <style name="SplashTheme" parent="GreenTheme">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name = "android:statusBarColor">@color/white</item>

    </style>
</resources>